<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C3F0EDED"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:elevation="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_5sdp"
        >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/images11"
            >
        </ImageView>


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            style="@style/textview16verdana_bold"
            android:inputType="textMultiLine"
            android:text="बजाज ऑटोने गोव्यात सादर केली ऑल न्यू चेतक"
            >
        </TextView>

        <TextView
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:layout_weight="0.9"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />

        </LinearLayout>

    </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:elevation="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_5sdp"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/images111"
                >
            </ImageView>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    style="@style/textview16verdana_bold"
                    android:inputType="textMultiLine"
                    android:text="बजाज ऑटोने गोव्यात सादर केली ऑल न्यू चेतक"
                    >
                </TextView>

                <TextView
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="0.9"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:elevation="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_5sdp"
        >


        <LinearLayout
            android:id="@+id/ll_news_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/news1"
                >
            </ImageView>


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    style="@style/textview16verdana_bold"
                    android:inputType="textMultiLine"
                    android:text="बजाज ऑटोने गोव्यात सादर केली ऑल न्यू चेतक"
                    >
                </TextView>

                <TextView
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="0.9"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    </LinearLayout>


    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_vid_play"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:src="@drawable/news1"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp" />

                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/vid_play"
                    android:layout_centerInParent="true"
                    >
                </ImageView>

            </RelativeLayout>

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:maxLines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textview14verdana"
                    android:padding="@dimen/_2sdp"
                    android:text="जगातील लोकप्रिय भारतीय दुचाकी म्हणून ओळख कमावलेल्या बजाज ऑटोने आज पणजी येथे इलेक्ट्रिक अवतारामधील ऑल न्यू चेतक सादर केली..."

                    />



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:src="@drawable/news1"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp" />

                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/vid_play"
                    android:layout_centerInParent="true"
                    >
                </ImageView>

            </RelativeLayout>

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:maxLines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textview14verdana"
                    android:padding="@dimen/_2sdp"
                    android:text="जगातील लोकप्रिय भारतीय दुचाकी म्हणून ओळख कमावलेल्या बजाज ऑटोने आज पणजी येथे इलेक्ट्रिक अवतारामधील ऑल न्यू चेतक सादर केली..."

                    />



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:src="@drawable/news1"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp" />

                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"

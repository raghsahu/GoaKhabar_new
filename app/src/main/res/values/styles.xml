<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="cursive_tx" parent="android:Widget.TextView">
        <item name="fontPath">font/verdana.ttf</item>
    </style>

    <style name="tx_vu" parent="android:Widget.TextView">
        <item name="fontPath">font/Roboto-Regular.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="textview08verdana">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/font_style_verdana</item>
    </style>
    <style name="textview10verdana">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/font_style_verdana</item>
    </style>

    <style name="textview12verdana">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/font_style_verdana</item>
    </style>

    <style name="textview14verdana">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/font_style_verdana</item>
    </style>

    <style name="textview16verdana">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/font_style_verdana</item>
    </style>

    <style name="textview14verdana_bold">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/verdana</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview16verdana_bold">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/verdana</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
